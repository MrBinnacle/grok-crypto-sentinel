{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Validator Schema",
  "type": "object",
  "properties": {
    "schedule": {
      "type": "object",
      "properties": {
        "run_time": {
          "type": "string",
          "format": "time"
        }
      },
      "required": ["run_time"]
    },
    "codex": {
      "type": "object",
      "properties": {
        "breakout_watch": {
          "type": "object",
          "properties": {
            "support_floor": {
              "type": "number"
            },
            "breakout_zone": {
              "type": "number"
            },
            "trigger_condition": {
              "type": "string"
            }
          },
          "required": ["support_floor", "breakout_zone", "trigger_condition"]
        },
        "onchain_signal": {
          "type": "object",
          "properties": {
            "whale_wallet_threshold": {
              "type": "integer"
            },
            "volume_spike_pct": {
              "type": "integer"
            },
            "context_dependency": {
              "type": "boolean"
            }
          },
          "required": ["whale_wallet_threshold", "volume_spike_pct", "context_dependency"]
        }
      },
      "required": ["breakout_watch", "onchain_signal"]
    }
  },
  "required": ["schedule", "codex"]
}