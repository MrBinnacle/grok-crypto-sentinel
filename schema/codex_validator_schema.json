{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Signal Insight Schema",
  "type": "object",
  "properties": {
    "signals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["what_happened", "why_it_matters", "suggested_posture"],
        "properties": {
          "what_happened": {
            "type": "string",
            "minLength": 10
          },
          "why_it_matters": {
            "type": "string",
            "minLength": 10
          },
          "suggested_posture": {
            "type": "string",
            "enum": ["accumulate", "wait", "de-risk", "exit", "review"]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "persona": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["signals"]
}
